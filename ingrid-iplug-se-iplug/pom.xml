<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>de.ingrid</groupId>
		<artifactId>ingrid-iplug-se</artifactId>
		<version>3.5.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.ingrid</groupId>
	<artifactId>ingrid-iplug-se-iplug</artifactId>
	<packaging>jar</packaging>
	<name>ingrid-iplug-se-iplug</name>
	<repositories>
		<!-- Repo of parent pom needed, parent pom may not be installed locally
		yet -->
		<repository>
			<id>de.ingrid.all</id>
			<name>Maven Repo InGrid</name>
			<url>https://dev.informationgrid.eu/archiva/repository/ingrid-all</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-beans</artifactId>
				<version>4.0.0.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-core</artifactId>
				<version>4.0.0.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-context</artifactId>
				<version>4.0.0.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>xerces</groupId>
				<artifactId>xercesImpl</artifactId>
				<version>2.9.1</version>
			</dependency>
			<dependency>
				<groupId>xalan</groupId>
				<artifactId>xalan</artifactId>
				<version>2.7.1</version>
			</dependency>
			<!--<dependency> <groupId>com.tngtech.java</groupId> <artifactId>config-builder</artifactId>
			<version>1.4-SNAPSHOT</version> </dependency> -->
			<dependency>
				<groupId>de.ingrid</groupId>
				<artifactId>ingrid-iplug</artifactId>
				<version>3.5.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>de.ingrid</groupId>
				<artifactId>ingrid-utils</artifactId>
				<version>3.5.0-SNAPSHOT</version>
			</dependency>
			<dependency>
                <groupId>de.ingrid</groupId>
                <artifactId>ingrid-communication</artifactId>
                <version>3.5.0-SNAPSHOT</version>
            </dependency>
			<dependency>
	            <groupId>org.mortbay.jetty</groupId>
	            <artifactId>jetty</artifactId>
	            <version>6.1.26</version>
	        </dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>de.ingrid</groupId>
			<artifactId>ingrid-base-webapp</artifactId>
			<version>4.0.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>org.apache.lucene</groupId>
					<artifactId>lucene-analyzers</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>de.ingrid</groupId>
			<artifactId>ingrid-base-webapp</artifactId>
			<version>4.0.0-SNAPSHOT</version>
			<classifier>res</classifier>
			<type>zip</type>
			<exclusions>
				<exclusion>
					<groupId>org.apache.lucene</groupId>
					<artifactId>lucene-analyzers</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.elasticsearch</groupId>
			<artifactId>elasticsearch</artifactId>
			<version>1.3.4</version>
		</dependency>

		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>2.4.2</version>
		</dependency>

		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.4.2</version>
		</dependency>


		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-exec</artifactId>
			<version>1.2</version>
		</dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.4</version>
        </dependency>

		<!-- The following two libs are needed for geo_shape based search! see:
		http://www.elasticsearch.org/guide/en/elasticsearch/client/java-api/current/query-dsl-filters.html -->
		<!-- <dependency> <groupId>com.spatial4j</groupId> <artifactId>spatial4j</artifactId>
			<version>0.4.1</version> </dependency> <dependency> <groupId>com.vividsolutions</groupId>
			<artifactId>jts</artifactId> <version>1.13</version> <exclusions> <exclusion>
			<groupId>xerces</groupId> <artifactId>xercesImpl</artifactId> </exclusion>
		</exclusions> </dependency> -->

		<!-- needed for Java8 compatibility with PowerMock -->
		<dependency>
			<groupId>org.javassist</groupId>
			<artifactId>javassist</artifactId>
			<version>3.18.2-GA</version>
		</dependency>

		<!-- DB Migration -->
		<dependency>
			<groupId>org.flywaydb</groupId>
		    <artifactId>flyway-core</artifactId>
		    <version>3.0</version>
		</dependency>

		<!-- JPA provider -->
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>eclipselink</artifactId>
			<version>2.5.2</version>
		</dependency>

		<!-- H2 Database -->
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.4.181</version>
		</dependency>

		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.5.6</version>
			<!-- <scope>test</scope> -->
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.5.6</version>
			<!-- <scope>test</scope> -->
		</dependency>

		<!-- Library used for the migration of old database to new one -->
		<dependency>
		    <groupId>mysql</groupId>
		    <artifactId>mysql-connector-java</artifactId>
		    <version>5.1.33</version>
		</dependency>


	</dependencies>
	<build>
		<finalName>${project.parent.artifactId}-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-base-webapp</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>de.ingrid</groupId>
									<artifactId>ingrid-base-webapp</artifactId>
									<classifier>res</classifier>
									<type>zip</type>
									<outputDirectory>${project.build.directory}/base-webapp</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack-apache-nutch-runtime</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>de.ingrid</groupId>
									<artifactId>ingrid-iplug-se-nutch</artifactId>
									<version>${project.version}</version>
									<type>zip</type>
									<outputDirectory>./</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<inherited>true</inherited>
				<configuration>
					<useProjectReferences>false</useProjectReferences>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<!-- one of these: IPLUG_SE, IPLUG_DSC, IPLUG_SNS, IPLUG_TAMINO, IPLUG_FPN,
							IPLUG_G2K, IPLUG_CSW, IPLUG_CSW_DSC, OTHER see ingrid-utils:de.ingrid.utils.metadata.IPlugType -->
							<iPlug-Type>IPLUG_SE</iPlug-Type>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<!-- Add Type of Component to Manifest of Installer for Upgrade Server -->
				<configuration>
					<skipAssembly>false</skipAssembly>
					<archive>
						<manifestEntries>
							<ingridComponentType>IPLUG_SE</ingridComponentType>
						</manifestEntries>
					</archive>
				</configuration>
				<executions>
	                <execution>
	                    <id>installer-builder</id>
	                    <goals>
	                        <goal>single</goal>
	                    </goals>
	                    <phase>package</phase>
	                </execution>
	            </executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>apache-nutch-runtime</directory>
							<includes>
								<include>**/*</include>
							</includes>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.5.2</version>
				<configuration>
					<skip>true</skip>
				</configuration>
				<executions>
	                <execution>
	                    <id>installer-install</id>
	                    <goals>
	                        <goal>install-file</goal>
	                    </goals>
	                    <phase>install</phase>
						<configuration>
							<skip>false</skip>
							<packaging>jar</packaging>
							<artifactId>${project.parent.artifactId}</artifactId>
							<classifier>installer</classifier>
							<groupId>${project.groupId}</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/${project.build.finalName}-installer.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.2</version>
				<configuration>
					<skip>true</skip>
					<uniqueVersion>false</uniqueVersion>
				</configuration>
				<executions>
	                <execution>
	                    <id>installer-deploy</id>
	                    <goals>
	                        <goal>deploy-file</goal>
	                    </goals>
	                    <phase>deploy</phase>
						<configuration>
							<skip>false</skip>
							<packaging>jar</packaging>
							<uniqueVersion>false</uniqueVersion>
							<artifactId>${project.parent.artifactId}</artifactId>
							<classifier>installer</classifier>
							<groupId>${project.groupId}</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/${project.build.finalName}-installer.jar</file>
							<url>${project.distributionManagement.repository.url}</url>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<configuration>
					<!-- use the parent artifact id instead of this sub-module -->
					<url>file:///opt/ingrid/distributions/${project.parent.artifactId}/${project.version}</url>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/webapp/css/blue.css</exclude>
                        <exclude>**/webapp/css/chosen**</exclude>
                        <exclude>**/webapp/css/jquery**</exclude>
                        <exclude>**/webapp/js/chart**</exclude>
                        <exclude>**/webapp/js/chosen**</exclude>
                        <exclude>**/webapp/js/icheck**</exclude>
                        <exclude>**/webapp/js/jquery**</exclude>
                        <exclude>**/webapp/js/mindmup**</exclude>
                        <exclude>**/webapp/js/localization/**</exclude>
                        <exclude>**/db/migration/**</exclude>
                        <exclude>**/*.json</exclude>
                        <exclude>**/log4j.properties</exclude>
                    </excludes>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>
