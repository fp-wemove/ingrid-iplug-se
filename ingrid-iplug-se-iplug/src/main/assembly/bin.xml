<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>installer</id>
	<formats>
    <format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
      <directory>src/main/release/scripts</directory>
      <outputDirectory>${project.build.finalName}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/release/conf</directory>
      <outputDirectory>${project.build.finalName}/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/release/ant-installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
			<directory>apache-nutch-runtime</directory>
			<outputDirectory>${project.build.finalName}/apache-nutch-runtime</outputDirectory>
		</fileSet>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory>${project.build.finalName}/webapp</outputDirectory>
      <excludes>
        <exclude>**/WEB-INF/jetty-web.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/base-webapp</directory>
      <outputDirectory>${project.build.finalName}/webapp</outputDirectory>
    </fileSet>
		<fileSet>
			<directory>../target/installer</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
  <files>
    <file>
      <source>src/main/release/jetty/jetty-web.xml</source>
      <outputDirectory>${project.build.finalName}/webapp/WEB-INF</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${project.build.finalName}/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>de.ingrid:ingrid-base-webapp:zip</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
